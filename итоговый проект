kol = 0
vsego = 10
print('Тест предназначен для учеников седьмого класса')
otv = input("В ряду символ - ... - строка - фрагмент текста пропущено:")
if otv == "слово":
    print("Верно")
    kol = kol + 1
else:
    print("Не верно")
     
otv = input("Символ, вводимый с клавиатуры при наборе, отображается на экране дисплея в позиции, определяемой: ")
if otv.lower() == "положением курсора":
    print("Верно")
    kol = kol + 1
else:
    print("Не верно")
 
otv = input("При наборе текста одно слово от другого отделяется: ")
if otv.lower() == "пробелом":
    print("Верно")
    kol = kol + 1
else:
    print("Не верно")  
  
otv = input("В текстовом редакторе при задании параметров страницы устанавливаются:(Возможно несколько вариантов ответа)")
if otv.lower() == "поля, ориентация":
    print("Верно")
    kol = kol + 1
else:
    print("Не верно")   

otv = input("Какие бывают виды форматирования? (Возможно несколько вариантов ответа) ")
if otv.lower() == "символа, абзаца":
    print("Верно")
    kol = kol + 1
else:
    print("Не верно")  
 
otv = input("(Возможно несколько вариантов ответа)!
Какие основные элементы текста используются в программе Microsoft Word? ")
if otv.lower() == "символ, абзац, строка":
    print("Верно")
    kol = kol + 1
else:
    print("Не верно") 
  
otv = input("Как удалить символ, стоящий слева от курсора... ")
if otv.lower() == "нажать Backspace":
    print("Верно")
    kol = kol + 1
else:
    print("Не верно")   

 otv = input("Как удалить символ стоящий, справа от курсора...")
if otv.lower() == "нажать Delete":
    print("Верно")
    kol = kol + 1
else:
    print("Не верно")  
otv = input("Какие бывают виды изображений в компьютерной графике?")
if otv.lower() == "растровые и векторные":
    print("Верно")
    kol = kol + 1
else:
    print("Не верно")  

otv = input("В Microsoft Word для создания векторных графических изображений используется панель ...")
if otv.lower() == "рисования":
    print("Верно")
    kol = kol + 1
else:
    print("Не верно")  

print(kol," верных ответов из ", vsego)

if(kol <= 5):
    print("не удовлетворительно")
elif(kol > 5 & kol < 7):
    print("удовлетворительно")
elif(kol >= 7 & kol < 9):
    print("хорошо")
else:
    print("отлично")    
